#!/bin/bash
source "$(dirname "${BASH_SOURCE[0]}")"/getBuild

function getTag() {
  if [ -f ./tag.txt ]; then
    TAG="$(cat ./tag.txt)"
  else
    BUILD=$(getBuild)
    
    git fetch --all --tags

    i=1
    TAG="${BUILD}-${i}"

    while [[ $(git tag -l "$TAG") ]]
    do
      TAG="${BUILD}-${i}"
      i=$(($i + 1))
    done
    echo "$TAG" > ./tag.txt
  fi

  echo "$TAG"
}
